<UserControl x:Class="CoffeShop.View.Dialog.WaitingDialogUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoffeShop.View.Dialog"
             mc:Ignorable="d" 
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto" 
             TextElement.FontWeight="Regular"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="190" Height="90" Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <ProgressBar Grid.Row="0" Style="{StaticResource MaterialDesignCircularProgressBar}" Value="79" IsIndeterminate="True"/>
        <TextBlock Grid.Row="1" Text="{DynamicResource PLASE_WAITING}"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="16" FontWeight="SemiBold"/>
    </Grid>
</UserControl>
